- if current_user
  %h2= 'Welcome ' + @current_user.first_name

%h1 Home Latest Posts

- @posts.each do |post| 
  / .post %p= post.body + " " + "by: "+post.user.username
  .post{:id => "post#{post.id}"}
    %p
      %a{href: "/posts/#{post.id}"}
        = post.title + "    by: "
      %span= post.user.username    
  %br 
%br