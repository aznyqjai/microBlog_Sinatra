%h1 User Page
%p
  = @user.full_name
  %br
  = @user.email
  %br
  = @user.id
  %br

%h2 
  = @user.full_name

- @posts.each do |post|
  = post.body 
  %br
  / %br
- if @user.reservations.count > 0
  %h2 Your Reservations
  - @user.reservations.each do |r|
    = 'Your ' + r.room.name + ' room reservation at ' + r.room.hotel_name
    %br